---
import { Sprite } from 'astro-icon';
import MainLayout from '~/layouts/MainLayout.astro';
import Ecosystem from './_components/landing-page/Ecosystem.astro';
import Features from './_components/landing-page/Features.astro';
import FinalCTA from './_components/landing-page/FinalCTA.astro';
import Hero from './_components/landing-page/Hero.astro';
import Integrations from './_components/landing-page/Integrations.astro';
import Intro from './_components/landing-page/Intro.astro';
import Islands from './_components/landing-page/Islands.astro';
import Sponsors from './_components/landing-page/Sponsors.astro';
---

<Sprite.Provider>
	<MainLayout
		bgClass="bg-astro-dark-900"
		image={{ src: '/og/astro.jpg', alt: 'Astro - Build the web you want.' }}
	>
		<Hero />
		<Intro />
		<Islands />
		<Integrations />
		<Features />
		<!-- Not yet ready to launch: <Studio /> -->
		<Ecosystem />
		<FinalCTA />
		<Sponsors />
		<div class="h-20 sm:h-36"></div>
	</MainLayout>
</Sprite.Provider>
