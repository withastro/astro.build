---
import Marquee from "~/components/Marquee.astro"

export type Props = {
	logos: Array<{
		src: ImageMetadata
		alt: string
		href?: string
		imageClass?: string
	}>
}
---

<Marquee>
	<ul class="flex gap-2 pr-2">
		{
			Astro.props.logos.map((logo) => (
				<li class="flex items-center justify-center rounded-full bg-white s-16">
					<img
						src={logo.src.src}
						alt={logo.alt}
						class:list={["object-contain s-8", logo.imageClass]}
						loading="lazy"
						decoding="async"
					/>
				</li>
			))
		}
	</ul>
</Marquee>
