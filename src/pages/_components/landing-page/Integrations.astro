---
import Link from "../Link.astro";
import SectionCopy from "../SectionCopy.astro";
import IntegrationTab from "./IntegrationTab.astro";
import Preact from "./integrations-tabs/Preact.astro";
import React from "./integrations-tabs/React.astro";
import Solid from "./integrations-tabs/Solid.astro";
import Svelte from "./integrations-tabs/Svelte.astro";
import Vue from "./integrations-tabs/Vue.astro";
---

<section class="mt-20 md:mt-24 lg:mt-28 xl:mt-36 relative">
  <div class="w-full max-w-screen-xl mx-auto px-4 sm:px-8">
    <SectionCopy 
        label="Maximum Flexibility" 
        title="Zero Lock-in" 
        description="Astro supports every major UI framework. Bring your existing components and take advantage of Astro's optimized client build performance.">
      <Link slot="call-to-action" href="https://docs.astro.build/en/guides/integrations-guide/#official-integrations" class="secondary">Integrate your favorite framework</Link>
    </SectionCopy>
  </div>

  <div class="mx-auto w-full max-w-screen-xl">
    <div role="tablist" aria-label="Ecosystem Tabs"
      class="mt-4 py-1 sm:mt-8 px-4 sm:px-8 w-full flex items-center overflow-x-auto text-nowrap no-scrollbar gap-4 sm:gap-6">
        <IntegrationTab label="React" logoSrc="/assets/integrations/react.svg" isActive
          background="group-aria-selected:bg-[#61DAFB]" innerBackground="group-aria-selected:bg-[#61DAFB]/20" text="group-aria-selected:text-[#61DAFB]"/>
        <IntegrationTab label="Vue" logoSrc="/assets/integrations/vue.svg" size="size-5 lg:size-6"
          background="group-aria-selected:bg-[#41B883]" innerBackground="group-aria-selected:bg-[#41B883]/20" text="group-aria-selected:text-[#41B883]"/>
        <IntegrationTab label="Preact" logoSrc="/assets/integrations/preact.svg"
          background="group-aria-selected:bg-[#673AB8]" innerBackground="group-aria-selected:bg-[#673AB8]/20" text="group-aria-selected:text-[#673AB8]"/>
        <IntegrationTab label="Svelte" logoSrc="/assets/integrations/svelte.svg"
          background="group-aria-selected:bg-[#FF3E00]" innerBackground="group-aria-selected:bg-[#FF3E00]/20" text="group-aria-selected:text-[#FF3E00]"/>
        <IntegrationTab label="Solid" logoSrc="/assets/integrations/solid.svg" size="size-5 lg:size-7" 
        background="group-aria-selected:bg-[#76B3E1]" innerBackground="group-aria-selected:bg-[#76B3E1]/20" text="group-aria-selected:text-[#76B3E1]"/>
    </div>
  </div>

  <div class="my-4 sm:my-8 w-full border-t border-t-astro-gray-600" />

  <ul class="mx-auto w-full max-w-screen-xl px-4 sm:px-8">            
    <React />
    <Vue />
    <Preact />
    <Svelte />
    <Solid />
  </ul>

</section>

<script>
  // @ts-nocheck
    const tabs = document.querySelectorAll(".integration-tab")
    let activeTabIndex = 0

    function updateTabSelection(index) {
      const nextTab = tabs[index]
      const activeTab = tabs[activeTabIndex]
      const nextTabContent = document.querySelector(`#integration-panel-${index + 1}`)
      const activeTabContent = document.querySelector(`#integration-panel-${activeTabIndex + 1}`)

      activeTab.setAttribute("aria-selected", "false")
      activeTab.setAttribute("tabindex", "-1")
      activeTabContent.classList.add('hidden')

      nextTab.setAttribute("aria-selected", "true")
      nextTab.setAttribute("tabindex", "0")
      nextTabContent.classList.remove('hidden')

      tabs[index].focus()
      activeTabIndex = index
    }

    tabs.forEach((tab, index) => {
      tab.addEventListener("click", () => updateTabSelection(index))
      
      tab.addEventListener("keydown", (event) => {
        if (event.key === "ArrowRight") {
            event.preventDefault()
            const nextIndex = (activeTabIndex + 1) % tabs.length
            updateTabSelection(nextIndex)
        } else if (event.key === "ArrowLeft") {
            event.preventDefault()
            const prevIndex = (activeTabIndex - 1 + tabs.length) % tabs.length
            updateTabSelection(prevIndex)
          }
      })
    })
</script>
