  },
  {
    height: 32,
    label: "Ship Shape",
    alt: "Ship Shape Logo",
    src: "sponsors/shipshape",
    href: "https://shipshape.io/?ref=astro",
  },
  {
    height: 22,
    label: "ButterCMS",
    alt: "ButterCMS Logo",
    src: "sponsors/buttercms",
    href: "https://buttercms.com/?utm_source=astro.build&utm_medium=banner&utm_campaign=sponsorship",
  },
  {
    height: 20,
    label: "Deepgram",
    alt: "Deepgram Logo",
    src: "sponsors/deepgram",
