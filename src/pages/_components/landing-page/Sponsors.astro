---
import Icon from "astro-icon";

const mainSponsors = [
  {
    height: 40,
    label: "Vercel",
    alt: "Vercel Logo",
    src: "sponsors/vercel",
    href: "https://vercel.com/",
    caption: "Official Hosting Partner",
  },
  {
    height: 40,
    label: "Storyblok",
    alt: "Storyblok Logo ",
    src: "sponsors/storyblok",
    caption: "Official CMS Partner",
    href: "https://www.storyblok.com/technologies?utm_source=astro&utm_medium=sponsor&utm_campaign=DGM_BRA_ASTR_TRA&utm_content=Astro_3#astro",
  },
  {
    height: 32,
    label: "Sentry",
    alt: "Sentry Logo",
    src: "sponsors/sentry",
    caption: "Official App Monitoring Partner",
    href: "https://sentry.io/welcome/?utm_medium=partner&utm_source=astro&utm_campaign=astro-homepage",
  },
];

const sponsors = [
  {
    height: 40,
    label: "Netlify",
    alt: "Netlify Logo",
    src: "sponsors/netlify",
    href: "https://netlify.com",
  },
  {
    height: 32,
    label: "Chrome",
    alt: "Google Chrome Logo",
    src: "sponsors/chrome",
    href: "https://developer.chrome.com/blog/framework-fund-2022/",
  },
  {
    height: 32,
    label: "Ship Shape",
    alt: "Ship Shape Logo",
    src: "sponsors/shipshape",
    href: "https://shipshape.io/?ref=astro",
  },
  {
    height: 22,
    label: "ButterCMS",
    alt: "ButterCMS Logo",
    src: "sponsors/buttercms",
    href: "https://buttercms.com/?utm_source=astro.build&utm_medium=banner&utm_campaign=sponsorship",
  },
  {
    height: 18,
    label: "Deepgram",
    alt: "Deepgram Logo",
    src: "sponsors/deepgram",
    href: "https://deepgram.com/",
  },
  {
    height: 22,
    label: "Div Riots",
    alt: "Div Riots Logo",
    src: "sponsors/divriots",
    href: "https://divriots.com/",
  },
  {
    height: 32,
    label: "Transloadit",
    alt: "Transloadit Logo",
    src: "sponsors/transloadit",
    href: "https://transloadit.com/?utm_source=astro&utm_medium=referral&utm_campaign=sponsorship&utm_content=astro-website",
  },
  {
    height: 32,
    label: "CloudCannon",
    alt: "CloudCannon Logo",
    src: "sponsors/cloudcannon",
    href: "https://cloudcannon.com/astro-cms/?utm_campaign=Astro%20out-of-beta&utm_source=astro-sponsorship",
  },
];
---

<section class="mt-20 md:mt-24 lg:mt-28 xl:mt-36 w-full max-w-screen-2xl mx-auto px-4 sm:px-8">
  <h2 class="max-w-screen-md mx-auto font-heading text-2xl lg:text-3xl font-bold text-white text-balance text-center">
    Astro is free, open-source software made possible by these wonderful sponsors
  </h2>

  <div
    class="mt-8 lg:mt-10 max-w-4xl w-full mx-auto border border-astro-dark-100/20 bg-astro-dark-800 rounded-xl sm:rounded-2xl overflow-hidden"
  >
    <div
      class="h-96 lg:h-44 m-1 flex flex-col lg:flex-row items-center justify-center divide-x divide-astro-dark-100/20"
    >
      {
        mainSponsors.map((sponsor) => (
          <a
            href={sponsor.href}
            rel="sponsored"
            target="_blank"
            class="size-full basis-1/3 flex flex-col items-center justify-center gap-2 sm:gap-4"
          >
            <Icon
              name={sponsor.src}
              height={sponsor.height}
              alt={sponsor.alt}
              aria-label={sponsor.label}
            />
            <span class="font-light text-astro-gray-300">
              {sponsor.caption}
            </span>
          </a>
        ))
      }
    </div>

    <div
      class="my-1 grid grid-cols-2 lg:grid-cols-4 divide-y divide-x divide-astro-dark-100/20"
    >
      {
        sponsors.map((sponsor) => (
          <a
            href={sponsor.href}
            rel="sponsored"
            target="_blank"
            class="h-32 lg:h-44 basis-1/4 flex flex-col items-center justify-center gap-2 sm:gap-4 first:border-t first:border-astro-dark-100/20"
          >
            <Icon
              name={sponsor.src}
              height={sponsor.height}
              alt={sponsor.alt}
              aria-label={sponsor.label}
            />
          </a>
        ))
      }
    </div>
  </div>
</section>
