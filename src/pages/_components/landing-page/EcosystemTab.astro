---
const { label, active = false } = Astro.props;
---

<li>
    <button 
        role="tab"
        data-tab={label.toLowerCase()}
        aria-selected={active ? "true" : undefined}
        class={`px-6 py-2 size-fit inline-flex items-center rounded-full bg-astro-dark-600/30 hover:bg-astro-dark-600/70 aria-selected:bg-white transition-all ease-in-out duration-500`}    
    >
        <p
            data-tab-title={label.toLowerCase()}
            aria-selected={active ? "true" : undefined} 
            class="text-base font-normal text-astro-gray-200 aria-selected:bg-clip-text aria-selected:text-transparent aria-selected:bg-blue-purple-gradient">
            {label}
        </p>
    </button>
</li>