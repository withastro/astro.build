---
import { Image } from 'astro:assets';
import Icon from 'astro-icon';
import astrofy from '../../../_assets/themes/astrofy.png';
import esqueleteCV from '../../../_assets/themes/esquelete-cv.png';
import gurido from '../../../_assets/themes/gurido.png';
import morePortfolioThemes from '../../../_assets/themes/more-portfolio-themes.png';
import shareLinks from '../../../_assets/themes/share-your-links.png';
import swissfolio from '../../../_assets/themes/swissfolio.png';
import Link from '../../Link.astro';
import ThemeContainer from './ThemeContainer.astro';

const themes = [
	{
		href: 'https://astro.build/themes/details/astrofy-personal-porfolio-website-template/',
		title: 'Astrofy',
		author: 'manuelernestog',
		src: astrofy,
		isSeenOnMobile: true,
	},
	{
		href: 'https://astro.build/themes/details/swissfolio/',
		title: 'Swissfolio',
		author: 'Lexington Themes',
		src: swissfolio,
		isSeenOnMobile: true,
	},
	{
		href: 'https://astro.build/themes/details/gurido/',
		title: 'Gurido',
		author: 'Lexington Themes',
		src: gurido,
		isSeenOnMobile: true,
	},
	{
		href: 'https://astro.build/themes/details/shareyourlinks/',
		title: 'ShareYourLinks',
		author: 'Angela Sofia Osorio',
		src: shareLinks,
		isSeenOnMobile: false,
	},
	{
		href: 'https://astro.build/themes/details/esquelete-cv/',
		title: 'Esquelete CV',
		author: 'Mart√≠n',
		src: esqueleteCV,
		isSeenOnMobile: false,
	},
];
---

<div class="p-1 grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-4 rounded-2xl">
	{themes.map((theme) => <ThemeContainer theme={theme} />)}
	<div class="size-fit group relative">
		<Image
			width={800}
			class="width-full rounded-xl isolate select-none"
			src={morePortfolioThemes}
			alt="An image showing all types of content driven websites you can build with Astro"
		/>
		<div
			class="m-auto size-full landing-section absolute inset-0 z-10 bg-gradient-to-b from-transparent to-30% to-astro-dark-900/20 group-hover:to-astro-dark-900/50 rounded-xl"
		>
			<Link href="https://astro.build/themes/?search=&categories%5B%5D=portfolio" class="secondary">
				<span>Browse more portfolio themes</span>
				<Icon name="ri:arrow-right-line" size={18} />
			</Link>
		</div>
	</div>
</div>
