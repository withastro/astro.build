---
type Props = {
  label: string
  size?: string
  logoSrc: string
  isActive?: boolean
  background: string
  innerBackground: string
  text: string
}
const { logoSrc, label, size = "size-6 sm:size-8", isActive = false, background, text, innerBackground } = Astro.props
---

<button
    role='tab'
    id={label.toLowerCase()}
    data-tab={label.toLowerCase()}
    aria-selected={isActive ? "true" : "false"}
    class='integration-tab group relative flex flex-col items-center gap-3 whitespace-nowrap rounded-full text-lg sm:text-xl md:rounded-lg'
>
<div class:list={["size-fit landing-section rounded-full p-0.5 lg:p-1 bg-astro-dark-100", background]}>
  <div class="bg-black size-12 lg:size-16 landing-section rounded-full">
    <div
      class:list={["w-full h-full landing-section rounded-full bg-astro-dark-100/20 grayscale group-aria-selected:grayscale-0", innerBackground]}
    >
      <img class={size} src={logoSrc} alt={`${label} Logo`} />
    </div>
  </div>
</div>

  <p class:list={["font-medium text-base text-astro-gray-300", text]}>
    {label}
  </p>
</button>
