---
type Props = {
	label: string;
	size?: string;
	text: string;
	logoSrc: string;
	isActive?: boolean;
	background: string;
	innerBackground: string;
};
const {
	logoSrc,
	label,
	size = "size-6 sm:size-8",
	isActive = false,
	background,
	text,
	innerBackground,
} = Astro.props;
---

<button
    role='tab'
    id={label.toLowerCase()}
    data-tab={label.toLowerCase()}
    aria-selected={isActive ? "true" : "false"}
    class='integration-tab group relative flex flex-col items-center gap-3 whitespace-nowrap rounded-full rounded-lg'
>
<div class:list={["size-fit landing-section rounded-full p-0.5 lg:p-1 bg-astro-dark-100 group-hover:bg-astro-gray-200 transition-all duration-300 ease-in-out", background]}>
  <div class="bg-black size-12 lg:size-16 landing-section rounded-full">
    <div
      class:list={["w-full h-full landing-section rounded-full bg-astro-dark-100/20 grayscale group-aria-selected:grayscale-0", innerBackground]}
    >
      <img class={size} src={logoSrc} alt={`${label} Logo`} />
    </div>
  </div>
</div>

  <p class:list={["font-medium text-base text-astro-gray-300 group-hover:text-astro-gray-200 transition-all duration-300 ease-in-out", text]}>
    {label}
  </p>
</button>
