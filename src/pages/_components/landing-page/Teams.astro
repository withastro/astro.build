---
import Icon from 'astro-icon';

const logos = [
	{ icon: 'logos/google', alt: 'Google Logo', classes: 'h-9' },
	{ icon: 'logos/microsoft', alt: 'Microsoft Logo', classes: 'h-6' },
	{ icon: 'logos/theguardian', alt: 'The Guardian Logo', classes: 'h-8' },
	{ icon: 'logos/nordvpn', alt: 'NordVPN Logo', classes: 'h-8' },
	{ icon: 'logos/porsche', alt: 'Porsche Logo', classes: 'h-3.5' },
	{ icon: 'logos/nbc-news', alt: 'NBC News Logo', classes: 'h-5' },
];
---

<div class="mt-8 sm:mt-16 xs:p-6 mx-auto w-full max-w-screen-xl space-y-5 sm:space-y-8 p-4 sm:p-8">
	<div class="landing-section gap-4 sm:gap-6">
		<p class="text-astro-gray-1280 font-light text-base text-balance">
			Used by some of the largest companies around the world:
		</p>

		<div class="flex flex-wrap lg:flex-nowrap items-center justify-center gap-x-8 gap-y-6 px-4">
			{logos.map((logo) => <Icon name={logo.icon} class={logo.classes} />)}
		</div>
	</div>
</div>
