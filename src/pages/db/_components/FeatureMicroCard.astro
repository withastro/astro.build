---
const { removePadding = false } = Astro.props
---

<li class="space-y-2 rounded-xl border border-[#858B98]/20 bg-[#0C0F19]">
	<div class:list={["overflow-hidden h-1/2", removePadding ? "px-0" : "px-4"]}>
		<slot name="illustration" />
	</div>
	<div class="space-y-2 p-4">
		<h3 class="text-lg text-astro-gray-200">
			<slot name="title" />
		</h3>

		<p class="body text-balance text-astro-gray-300">
			<slot name="description" />
		</p>
	</div>
</li>
