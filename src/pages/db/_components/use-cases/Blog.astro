---
import { Code } from "astro-expressive-code/components"
import UseCase from "../UseCase.astro"
import code from "./snippets/blog.txt?raw"
---

<UseCase class="hidden" tab="blog">
	<div slot="example" class="relative isolate mx-auto grid max-w-7xl grid-cols-1 px-4 py-12">
		<ul class="flex flex-col space-y-4">
			<li class="rounded-md bg-astro-gray-400 p-8">
				<div>
					<span class="block h-6 w-52 rounded-full bg-astro-gray-600"></span>
				</div>
				<div class="mt-6">
					<div class="flex flex-col gap-2">
						<div class="h-4 max-w-[360px] rounded-full bg-astro-gray-600"></div>
						<div class="h-4 max-w-[300px] rounded-full bg-astro-gray-600"></div>
						<div class="h-4 max-w-[330px] rounded-full bg-astro-gray-600"></div>
					</div>
				</div>
			</li>
			<li class="rounded-md bg-astro-gray-400 p-8">
				<div>
					<span class="block h-6 w-64 rounded-full bg-astro-gray-600"></span>
				</div>
				<div class="mt-6">
					<div class="flex flex-col gap-2">
						<div class="h-4 max-w-[310px] rounded-full bg-astro-gray-600"></div>
						<div class="h-4 max-w-[350px] rounded-full bg-astro-gray-600"></div>
						<div class="h-4 max-w-[330px] rounded-full bg-astro-gray-600"></div>
					</div>
				</div>
			</li>
		</ul>
	</div>
	<Code slot="code" lang="ts" code={code.replaceAll("\t", "  ")} />
</UseCase>
