	<div
		slot="example"
		class="align-center relative isolate mx-auto flex max-w-7xl justify-center gap-8 p-8 py-12 text-3xl"
		style={{ "--size": "5rem" }}
	>
		<div
			class="target flex aspect-square items-center justify-center rounded-full bg-astro-gray-500 p-4 hover:bg-astro-gray-400"
		>
			👍
		</div>
		<div
			class="target flex aspect-square items-center justify-center rounded-full bg-astro-gray-500 p-4 hover:bg-astro-gray-400"
		>
			👎
		</div>
		<div
			class="target flex aspect-square items-center justify-center rounded-full bg-astro-gray-500 p-4 hover:bg-astro-gray-400"
		>
			🎉
		</div>
		<div
			class="target flex aspect-square items-center justify-center rounded-full bg-astro-gray-500 p-4 hover:bg-astro-gray-400"
		>
			🔥
		</div>
		<div
			class="target flex aspect-square items-center justify-center rounded-full bg-astro-gray-500 p-4 hover:bg-astro-gray-400"
		>
			🚀
		</div>
	</div>
