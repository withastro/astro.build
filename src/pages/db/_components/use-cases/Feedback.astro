---
import { Code } from "astro-expressive-code/components"
import UseCase from "../UseCase.astro"
import code from "./snippets/feedback.txt?raw"
---

<UseCase class="hidden" tab="feedback">
	<div
		slot="example"
		class="align-center relative isolate mx-auto flex max-w-7xl justify-center gap-8 p-8 py-12 text-3xl"
	>
		<button class="aspect-square w-16 rounded-full bg-astro-gray-500 p-4 hover:bg-astro-gray-400"
			>👍</button
		>
		<button class="aspect-square w-16 rounded-full bg-astro-gray-500 p-4 hover:bg-astro-gray-400"
			>👎</button
		>
		<button class="aspect-square w-16 rounded-full bg-astro-gray-500 p-4 hover:bg-astro-gray-400"
			>🎉</button
		>
		<button class="aspect-square w-16 rounded-full bg-astro-gray-500 p-4 hover:bg-astro-gray-400"
			>🔥</button
		>
		<button class="aspect-square w-16 rounded-full bg-astro-gray-500 p-4 hover:bg-astro-gray-400"
			>🚀</button
		>
	</div>
	<Code slot="code" lang="ts" code={code.replaceAll("\t", "  ")} />
</UseCase>
