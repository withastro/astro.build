---
import { getImage } from "astro:assets"
import bg from "../_assets/hero-bg.png"
const background = await getImage({ src: bg, format: "webp", width: 2560 })
---

<video
	class="height-auto absolute inset-y-0 max-w-[none] object-fill object-center"
	loop
	autoplay
	muted
	preload="auto"
	onerror={`this.parent.style.backgroundImage = "${background.src}"`}
	{...Astro.props}
>
	<source src="/assets/db/bg.webm" type="video/webm" />
	<source src="/assets/db/bg.mp4" type="video/mp4" />
</video>
