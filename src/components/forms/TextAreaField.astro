---
import type { HTMLAttributes } from 'astro/types'
import Field from './Field.astro'
import { textAreaClass } from '../styles.js'

export interface Props extends HTMLAttributes<'textarea'> {
    label: string
    required?: boolean
}

const { label, ...attrs } = Astro.props
---

<Field label={label} required={attrs.required}>
    <textarea {...attrs} class={textAreaClass} />
</Field>
