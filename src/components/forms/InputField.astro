---
import { HTMLAttributes } from 'astro/types'
import Field from './Field.astro'
import { inputClass } from '../styles.js'

export interface Props extends HTMLAttributes<'input'> {
    label: string
    required?: boolean
}

const { label, ...attrs } = Astro.props
---

<Field label={label} required={attrs.required}>
    <input {...attrs} class={inputClass} />
</Field>
