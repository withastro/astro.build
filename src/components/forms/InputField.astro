---
import { inputClass } from '../styles'
import Field from './Field.astro'

export type Props = astroHTML.JSX.InputHTMLAttributes & {
    label: string
}

const { label, ...props } = Astro.props
---

<Field
    label={label}
    required={props.required === true || props.required === 'true'}
>
    <input {...props} class:list={[inputClass, props.class]} />
</Field>
