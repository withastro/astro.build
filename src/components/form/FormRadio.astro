---
export type Props = Omit<astroHTML.JSX.InputHTMLAttributes, "type"> & {
	label: string
}

const { label, ...props } = Astro.props
---

<label class="inline-flex items-center gap-2">
	<input
		{...props}
		type="radio"
		class="h-4 w-4 appearance-none rounded-full border border-astro-gray-300 transition checked:rounded-none checked:border-0 checked:bg-blue-purple-gradient hover:border-astro-gray-400 checked:hover:brightness-75"
	/>
	{label}
</label>

<style>
	input:checked {
		mask-image: url("data:image/svg+xml,%3Csvg width='16' height='16' viewBox='0 0 16 16' fill='none' xmlns='http://www.w3.org/2000/svg'%3E%3Ccircle cx='8' cy='8' r='4' fill='%2317191E'/%3E%3Crect x='0.5' y='0.5' width='15' height='15' rx='7.5' stroke='%2317191E'/%3E%3C/svg%3E");
	}
</style>
