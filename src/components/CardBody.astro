---
import type { HTMLTag, Polymorphic } from "astro/types";

export type Props = Record<string, string> & { as: HTMLTag };

const { as: Component = "div", class: className, href, ...attrs } = Astro.props;
---

<Component
	class:list={["flex flex-1 flex-col gap-6 p-6 text-left", className]}
	href={href}
	{...attrs}
>
	<slot />
</Component>
