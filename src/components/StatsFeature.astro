---
interface Props {
	stats: {
		amount: string;
		text: string;
		source?: string;
		url?: string;
	}[];
}
---

<div class="mt-8 mb-20 w-full grid fluid-cols-40 md:fluid-cols-48 gap-8 gap-y-12 lg:gap-16">
	{
		Astro.props.stats.map(({ amount, text, source, url }) => (
			<p class="flex flex-col gap-2.5 leading-none text-white font-light">
				<span class="font-heading text-4xl lg:text-5xl">{amount}</span>
				<span class="text-sm xl:text-base">{text}</span>
				{source && (
					<a href={url} class="link text-xs">
						{source}
					</a>
				)}
			</p>
		))
	}
</div>
