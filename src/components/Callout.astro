---
import { Icon } from "astro-icon/components";

export type Props = {
	title?: string;
};
---

<aside
	class="my-4 border-l-4 border-astro-purple bg-astro-purple-dark px-6 py-4 text-white"
>
	<h3
		class="font-sans mb-2 flex items-center gap-2 text-lg font-semibold leading-tight"
	>
		<Icon name="rocket" class="s-6" aria-hidden="true" />
		{Astro.props.title}
	</h3>
	<slot />
</aside>
