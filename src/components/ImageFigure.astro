---
export type Props = {
	caption?: string
	centered?: boolean
}
---

<figure>
	<slot />
	{
		Astro.props.caption && (
			<figcaption
				class:list={[
					"mt-3 font-mono text-sm text-astro-gray-300",
					{ "text-center": Astro.props.centered },
				]}
			>
				{Astro.props.caption}
			</figcaption>
		)
	}
</figure>
