---
import { ImageMetadata } from "@astrojs/image/dist/vite-plugin-astro-image.js"

export interface Props {
	src: ImageMetadata
	alt?: string
}

const { src, alt = "" } = Astro.props as Props
---

<img
	src={src.src}
	alt={alt}
	width={src.width}
	height={src.height}
	class="max-w-full w-full mx-auto rounded-lg my-10 border border-astro-gray-500"
	loading="lazy"
	decoding="async"
/>
