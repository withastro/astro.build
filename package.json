{
	"name": "astro.build",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"start": "astro dev",
		"dev": "astro dev",
		"debug": "DEBUG=* astro dev",
		"build": "astro build",
		"preview": "astro preview",
		"format": "prettier --write .",
		"lint:a11y:local": "pa11y-ci --sitemap 'http://localhost:3000/sitemap.xml' --sitemap-find 'https://astro.build' --sitemap-replace 'http://localhost:3000'",
		"update:contributors": "node -r dotenv/config ./scripts/update-contributors.mjs",
		"update:integrations": "node -r dotenv/config ./scripts/update-integrations.mjs",
		"update:sponsors": "node -r dotenv/config ./scripts/update-sponsors.mjs",
		"update:themes": "node -r dotenv/config ./scripts/update-themes.mjs",
		"nightly": "run-s update:*"
	},
	"devDependencies": {
		"@astrojs/sitemap": "^0.1.0",
		"@tailwindcss/aspect-ratio": "^0.4.0",
		"@tailwindcss/line-clamp": "^0.3.1",
		"@tailwindcss/typography": "^0.5.2",
		"astro": "^1.0.0-beta.4",
		"astro-icon": "^0.7.1",
		"astro-imagetools": "^0.4.1",
		"autoprefixer": "^10.4.4",
		"clsx": "^1.1.1",
		"dotenv": "^16.0.0",
		"fast-glob": "^3.2.11",
		"focus-trap": "^6.7.3",
		"micromorph": "^0.1.2",
		"npm-run-all": "^4.1.5",
		"pa11y-ci": "^3.0.1",
		"postcss": "^8.4.12",
		"prettier": "^2.6.2",
		"prettier-plugin-astro": "^0.0.12",
		"sharp": "^0.30.3",
		"tailwindcss": "^3.0.23"
	},
	"volta": {
		"node": "14.18.3"
	},
	"dependencies": {
		"date-fns": "^2.28.0",
		"quicklink": "^2.2.0",
		"rehype-autolink-headings": "^6.1.1",
		"remark-autolink-headings": "^7.0.1",
		"remark-smartypants": "^2.0.0",
		"smartypants": "^0.1.6"
	},
	"pnpm": {
		"packageExtensions": {
			"astro-imagetools": {
				"peerDependencies": {
					"astro": "*"
				}
			}
		}
	}
}
